<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>
    
    <main>
        <div class="jumbotron py-3" id="agregar">
            <h1 class="pb-4 text-center">Login</h1>
            <div class="container" style="    width: 50%;
            background: #ffffffbf;
            border-radius: 2%;
            padding: 1em;">
                <form class="form" onsubmit="login(event)">
                    <div class="row">
                        <div class="mb-2">
                            <label class="form-label">Correo:</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Contrase√±a:</label>
                            <input type="password" class="form-control" id="password" required>
                        </div>
            
                    </div>
                        <a type="submit" class="btn btn-secondary" onclick="login(event)">Enviar</a>
                        <a type="button" class="btn btn-secondary" href='/register'>Registrar</a>
                </form>
            </div>
        </div>
    </main>

    <script src="/js/login.js"></script>
</body>

</html>